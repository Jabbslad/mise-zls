#!/usr/bin/env bash
set -euo pipefail

if [ "$ASDF_INSTALL_VERSION" = "master" ] || [ "$ASDF_INSTALL_VERSION" = "latest" ]; then
  git clone --depth=1 https://github.com/zigtools/zls "$ASDF_DOWNLOAD_PATH"
else
  git clone --depth=1 --branch "$ASDF_INSTALL_VERSION" https://github.com/zigtools/zls "$ASDF_DOWNLOAD_PATH"
fi
